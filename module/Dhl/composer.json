{
    "name": "app/dhl-cli",
    "description": "Command-line helper to create DHL Express shipments via MyDHL API.",
    "type": "project",
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.9",
        "laminas/laminas-cli": "^1.8",
        "laminas/laminas-servicemanager": "^3.22",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --testdox --colors=always",
        "test:debug": "phpunit --debug",
        "clean:test-labels": "@php -r \"array_map('unlink', glob('labels/test-*.pdf'));\""
    }
}

